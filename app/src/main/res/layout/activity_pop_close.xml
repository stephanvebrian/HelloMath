<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/popclose_bg"
    tools:context=".PopClose">

    <ImageView
        android:id="@+id/iv_endnow"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:src="@drawable/endnow" />

    <Button
        android:id="@+id/btn_YesPop"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_endnow"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="100dp"
        android:text="YES"
        android:background="@drawable/popcloes_yes"
        />

    <Button
        android:id="@+id/btn_NoPop"
        android:layout_below="@+id/iv_endnow"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="340dp"
        android:text="NO"
        android:background="@drawable/popclose_no"
        android:stateListAnimator="@null"
        />

    <ImageView
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_marginLeft="390dp"
        android:layout_marginTop="120dp"
        android:background="@drawable/char3"
        android:rotation="-10"
        android:stateListAnimator="@null"
        />

</RelativeLayout>