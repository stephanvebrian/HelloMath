<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@drawable/background_home"
    tools:context=".Game2Activity"
    android:id="@+id/activityGame2">

    <!-- Game2 -->

    <RelativeLayout
        android:id="@+id/boxGame2"
        android:layout_width="560dp"
        android:layout_height="320dp"
        android:background="@drawable/rectangle_shape">
        <RelativeLayout
            android:id="@+id/lineTimer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:id="@+id/boxTimer"
                android:layout_width="90dp"
                android:layout_height="35dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="25dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/rectangle_timer">
                <ImageView
                    android:id="@+id/ivTimer"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="1dp"
                    android:src="@drawable/ic_access_time_green_24dp"/>
                <TextView
                    android:id="@+id/tvTimer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_toRightOf="@+id/ivTimer"
                    android:layout_marginRight="2dp"
                    android:text="03:00"
                    android:textColor="@color/colorWhite"
                    android:textSize="22sp"/>
            </RelativeLayout>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="60dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/Num1Image1"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/char_2"/>
            <ImageView
                android:id="@+id/Num1Image2"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_toRightOf="@+id/Num1Image1"
                android:layout_marginLeft="2dp"
                android:src="@drawable/char_2"/>
            <ImageView
                android:id="@+id/Num1Image3"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_toRightOf="@+id/Num1Image2"
                android:layout_marginLeft="2dp"
                android:src="@drawable/char_2"/>
            <ImageView
                android:id="@+id/Num1Image4"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_toRightOf="@+id/Num1Image3"
                android:layout_marginLeft="2dp"
                android:src="@drawable/char_2"/>
            <ImageView
                android:id="@+id/Num1Image5"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_toRightOf="@+id/Num1Image4"
                android:layout_marginLeft="2dp"
                android:src="@drawable/char_2"/>
            <ImageView
                android:id="@+id/Num1Image6"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_toRightOf="@+id/Num1Image5"
                android:layout_marginLeft="2dp"
                android:src="@drawable/char_2"/>
            <ImageView
                android:id="@+id/Num1Image7"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_toRightOf="@+id/Num1Image6"
                android:layout_marginLeft="2dp"
                android:src="@drawable/char_2"/>
            <ImageView
                android:id="@+id/Num1Image8"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_toRightOf="@+id/Num1Image7"
                android:layout_marginLeft="2dp"
                android:src="@drawable/char_2"/>
            <ImageView
                android:id="@+id/Num1Image9"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_toRightOf="@+id/Num1Image8"
                android:layout_marginLeft="2dp"
                android:src="@drawable/char_2"/>
            <ImageView
                android:id="@+id/Num1Image10"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_toRightOf="@+id/Num1Image9"
                android:layout_marginLeft="2dp"
                android:src="@drawable/char_2"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl2"
            android:layout_below="@+id/rl1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/Num2Image1"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/char_4"/>
            <ImageView
                android:id="@+id/Num2Image2"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_toRightOf="@+id/Num2Image1"
                android:layout_marginLeft="2dp"
                android:src="@drawable/char_4"/>
            <ImageView
                android:id="@+id/Num2Image3"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_toRightOf="@+id/Num2Image2"
                android:layout_marginLeft="2dp"
                android:src="@drawable/char_4"/>
            <ImageView
                android:id="@+id/Num2Image4"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_toRightOf="@+id/Num2Image3"
                android:layout_marginLeft="2dp"
                android:src="@drawable/char_4"/>
            <ImageView
                android:id="@+id/Num2Image5"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_toRightOf="@+id/Num2Image4"
                android:layout_marginLeft="2dp"
                android:src="@drawable/char_4"/>
            <ImageView
                android:id="@+id/Num2Image6"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_toRightOf="@+id/Num2Image5"
                android:layout_marginLeft="2dp"
                android:src="@drawable/char_4"/>
            <ImageView
                android:id="@+id/Num2Image7"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_toRightOf="@+id/Num2Image6"
                android:layout_marginLeft="2dp"
                android:src="@drawable/char_4"/>
            <ImageView
                android:id="@+id/Num2Image8"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_toRightOf="@+id/Num2Image7"
                android:layout_marginLeft="2dp"
                android:src="@drawable/char_4"/>
            <ImageView
                android:id="@+id/Num2Image9"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_toRightOf="@+id/Num2Image8"
                android:layout_marginLeft="2dp"
                android:src="@drawable/char_4"/>
            <ImageView
                android:id="@+id/Num2Image10"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_toRightOf="@+id/Num2Image9"
                android:layout_marginLeft="2dp"
                android:src="@drawable/char_4"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl3"
            android:layout_below="@+id/rl2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tvNum1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5"
                android:textSize="60sp"
                android:fontFamily="@font/cartoonfont"
                android:textColor="@color/colorGame2Num1"
                />
            <TextView
                android:id="@+id/tvOp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/tvNum1"
                android:layout_marginLeft="20dp"
                android:text="+"
                android:textSize="60sp"
                android:textStyle="bold"
                android:textColor="@color/colorWhite"
                />
            <TextView
                android:id="@+id/tvNum2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/tvOp"
                android:layout_marginLeft="20dp"
                android:text="5"
                android:textSize="60sp"
                android:fontFamily="@font/cartoonfont"
                android:textColor="@color/colorGame2Num2"
                />
            <TextView
                android:id="@+id/tvEqual1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/tvNum2"
                android:layout_marginLeft="20dp"
                android:text="="
                android:textSize="60sp"
                android:textStyle="bold"
                android:textColor="@color/colorWhite"
                />
            <TextView
                android:id="@+id/tvAnswer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/tvEqual1"
                android:layout_marginLeft="20dp"
                android:text=" ? "
                android:textSize="60sp"
                android:ems="2"
                android:fontFamily="@font/cartoonfont"
                android:textColor="@color/colorWhite"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rl3"
            android:layout_centerHorizontal="true">
            <Button
                android:id="@+id/btnChoose0"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:background="@drawable/rectangle_white_button"
                android:text="0"
                android:textColor="@color/colorIjoTuaHomeText"
                android:textSize="27sp"/>
            <Button
                android:id="@+id/btnChoose1"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginLeft="47dp"
                android:background="@drawable/rectangle_white_button"
                android:text="1"
                android:textColor="@color/colorIjoTuaHomeText"
                android:textSize="27sp"/>
            <Button
                android:id="@+id/btnChoose2"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginLeft="94dp"
                android:background="@drawable/rectangle_white_button"
                android:text="2"
                android:textColor="@color/colorIjoTuaHomeText"
                android:textSize="27sp"/>
            <Button
                android:id="@+id/btnChoose3"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginLeft="141dp"
                android:background="@drawable/rectangle_white_button"
                android:text="3"
                android:textColor="@color/colorIjoTuaHomeText"
                android:textSize="27sp"/>
            <Button
                android:id="@+id/btnChoose4"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginLeft="188dp"
                android:background="@drawable/rectangle_white_button"
                android:text="4"
                android:textColor="@color/colorIjoTuaHomeText"
                android:textSize="27sp"/>
            <Button
                android:id="@+id/btnChoose5"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginLeft="235dp"
                android:background="@drawable/rectangle_white_button"
                android:text="5"
                android:textColor="@color/colorIjoTuaHomeText"
                android:textSize="27sp"/>
            <Button
                android:id="@+id/btnChoose6"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginLeft="282dp"
                android:background="@drawable/rectangle_white_button"
                android:text="6"
                android:textColor="@color/colorIjoTuaHomeText"
                android:textSize="27sp"/>
            <Button
                android:id="@+id/btnChoose7"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginLeft="329dp"
                android:background="@drawable/rectangle_white_button"
                android:text="7"
                android:textColor="@color/colorIjoTuaHomeText"
                android:textSize="27sp"/>
            <Button
                android:id="@+id/btnChoose8"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginLeft="376dp"
                android:background="@drawable/rectangle_white_button"
                android:text="8"
                android:textColor="@color/colorIjoTuaHomeText"
                android:textSize="27sp"/>
            <Button
                android:id="@+id/btnChoose9"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginLeft="423dp"
                android:background="@drawable/rectangle_white_button"
                android:text="9"
                android:textColor="@color/colorIjoTuaHomeText"
                android:textSize="27sp"/>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>