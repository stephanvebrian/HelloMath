<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/cover_bg"
    tools:context=".Cover">

    <ImageView
        android:id="@+id/iv_BackgroundCover"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/logo_hellomath"/>

    <EditText
        android:id="@+id/et_Username"
        android:layout_below="@+id/iv_BackgroundCover"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="55dp"
        android:paddingLeft="3dp"
        android:paddingRight="3dp"
        android:hint="Username"
        android:ems="8"
        android:textColorHint="#f1787878"
        android:textStyle="bold"
        android:textAlignment="center"
        android:fontFamily="@font/oneday"
        android:padding="15dp"
        android:background="@drawable/border"/>

    <Button
        android:id="@+id/btn_PlayGame"
        android:layout_below="@+id/et_Username"
        android:layout_centerHorizontal="true"
        android:layout_margin="12dp"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_play_arrow_black_24dp"
        android:drawablePadding="-15dp"
        android:background="#5ae461"
        android:backgroundTintMode="multiply"
        android:text="Play"
        android:textAlignment="center"/>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/btn_PlayGame"
        android:background="#de9bdc9e">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Click "
            android:textSize="15dp"
            android:textColor="#606060"/>

        <Button
            android:id="@+id/btn_ClickHere"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00ffffff"
            android:layout_marginLeft="-20dp"
            android:layout_marginRight="-15dp"
            android:text="here"
            android:textColor="#76832a"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:text="to sign up"
            android:textSize="15dp"
            android:textColor="#616161"/>

    </LinearLayout>




</RelativeLayout>