<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_home"
    android:gravity="center"
    tools:context=".ReportActivity"
    android:id="@+id/activityReport">

    <!-- ReportActivity -->

    <RelativeLayout
        android:id="@+id/boxReport"
        android:layout_width="560dp"
        android:layout_height="320dp"
        android:background="@drawable/rectangle_shape">
        <RelativeLayout
            android:id="@+id/lineCoinShopping"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:id="@+id/boxCoin"
                android:layout_width="80dp"
                android:layout_height="35dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="60dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/rectangle_timer">
                <ImageView
                    android:id="@+id/ivCoin"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="1dp"
                    android:src="@drawable/coin_img"/>
                <TextView
                    android:id="@+id/tvCoin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:text="999"
                    android:textColor="@color/colorWhite"
                    android:textSize="22sp"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rlShopping"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_toRightOf="@id/boxCoin"
                android:layout_marginLeft="-68dp"
                android:gravity="center"
                android:background="@drawable/rectangle_shape_shopping">
                <Button
                    android:id="@+id/btnShopping"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/ic_shopping_cart_white_24dp"/>
            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/ivCongratz"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:src="@drawable/congraz_image"
                android:layout_centerHorizontal="true"/>

            <RelativeLayout
                android:id="@+id/rlTrueFalse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ivCongratz"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="35dp"
                android:layout_marginTop="30dp">
                <TextView
                    android:id="@+id/tvTrue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="5"
                    android:textColor="@color/colorWhite"
                    android:textStyle="italic"
                    android:textSize="22dp"
                    android:text="Benar : 8"/>
                <TextView
                    android:id="@+id/tvFalse"
                    android:layout_below="@+id/tvTrue"
                    android:layout_width="wrap_content"
                    android:ems="5"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorWhite"
                    android:textStyle="italic"
                    android:textSize="22dp"
                    android:text="Salah : 2"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rlScore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ivCongratz"
                android:background="@drawable/circle_shape_score_report"
                android:layout_centerHorizontal="true"
                android:gravity="center">

                <TextView
                    android:id="@+id/tvScoreTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:ems="3"
                    android:textAlignment="center"
                    android:textColor="@color/colorWhite"
                    android:fontFamily="@font/awesomefreefont"
                    android:textSize="35sp"
                    android:text="Score"/>

                <TextView
                    android:id="@+id/tvScore"
                    android:layout_marginTop="-12dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvScoreTitle"
                    android:layout_centerHorizontal="true"
                    android:textSize="40sp"
                    android:fontFamily="@font/cartoonfont"
                    android:textColor="@color/colorWhite"
                    android:text="100"/>

            </RelativeLayout>

            <ImageView
                android:id="@+id/ivNext"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_below="@+id/ivCongratz"
                android:layout_alignParentRight="true"
                android:layout_marginRight="35dp"
                android:layout_marginTop="75dp"
                android:src="@drawable/char_3"/>

            <Button
                android:id="@+id/btnNext"
                android:background="@drawable/rectangle_timer"
                android:layout_below="@+id/ivNext"
                android:layout_width="90dp"
                android:layout_height="35dp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="-15dp"
                android:layout_marginRight="40dp"
                android:textStyle="italic"
                android:textColor="@color/colorWhite"
                android:text="Home"/>

        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>