<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.stephanv.hellomath">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:largeHeap="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/HelloMath">
        <activity
            android:name=".Cover"
            android:configChanges="keyboardHidden"
            android:screenOrientation="userLandscape"
            android:theme="@style/HelloMath">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".SignUp"
            android:screenOrientation="userLandscape"/>
        <activity android:name=".Home"
            android:screenOrientation="userLandscape"/>
        <activity
            android:name=".PopClose"
            android:theme="@style/HelloMath.PopClose"
            android:screenOrientation="userLandscape"/>
        <activity android:name=".TestDatabase" />
        <activity android:name=".Game1Activity"
            android:screenOrientation="userLandscape"/>
        <activity android:name=".Game2Activity"
            android:screenOrientation="userLandscape"/>
        <activity android:name=".Game3Activity"
            android:screenOrientation="userLandscape"/>
        <activity android:name=".ReportActivity"
            android:screenOrientation="userLandscape"/>
        <activity android:name=".ScoreActivity"
            android:screenOrientation="userLandscape"/>
        <activity android:name=".ShopActivity"
            android:screenOrientation="userLandscape"></activity>
    </application>

</manifest>